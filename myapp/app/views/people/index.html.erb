<table class="table table-dark">
  <!-- Encabezados de la tabla -->
  <thead>
    <tr>
      <th>Identification</th>
      <th>Document</th>
      <th>First_Name</th>
      <th>Second_Name</th>
      <th>First_Last_Name</th>
      <th>Second_Last_Name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <!-- Contenido de la tabla -->
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.identification, edit_person_path(person) %></td>
        <td><%= person.document.document_type %></td>
        <td><%= person.first_name %></td>
        <td><%= person.second_name %></td>
        <td><%= person.first_last_name %></td>
        <td><%= person.second_last_name %></td>
        <td><%= person.role.role_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "Nueva persona", new_person_path, class: "btn btn-primary" %>
